<UserControl x:Class="Kino.Toolkit.Wpf.Samples.ProgressRingSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kino.Toolkit.Wpf.Samples"
             xmlns:kino="clr-namespace:Kino.Toolkit.Wpf;assembly=Kino.Toolkit.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <kino:KinoProgressRing IsActive="True" Height="20" Width="20" Margin="8"/>
            <kino:KinoProgressRing IsActive="True"
                                   Height="40"
                                   Width="40"
                                   Margin="8"
                                   MinHeight="9"
                                   MinWidth="9"/>
        </StackPanel>
    </Grid>
</UserControl>
